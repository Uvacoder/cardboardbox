{
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "rootDir": "./src",
        "outDir": "./dist",
        // "strict": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": true,
        "resolveJsonModule": true
    },
    "typeAcquisition": {
        "enable": true
    }
}
